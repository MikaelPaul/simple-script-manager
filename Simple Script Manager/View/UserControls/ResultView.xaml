<UserControl x:Class="SSM.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:SSM"
             mc:Ignorable="d" d:DesignWidth="800" Height="110">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Label x:Name="GroupNameLabel" Grid.ColumnSpan="2" Padding="10" Content="{Binding Path=GroupName, UpdateSourceTrigger=PropertyChanged}"></Label>

        <StackPanel x:Name="Files" Orientation="Vertical" Grid.Row="1">
            
        </StackPanel>

        <StackPanel x:Name="Controls" Grid.Row="1" Grid.Column="1">
            <Button x:Name="OpenButton" Grid.Row="1" BorderThickness="0" Background="Transparent" MaxWidth="100" Margin="0 5">Open file</Button>
            <Button x:Name="EditButton" Grid.Row="1" BorderThickness="0" Background="Transparent" MaxWidth="100" Margin="0 5">Edit group</Button>
        </StackPanel>

    </Grid>
</UserControl>
